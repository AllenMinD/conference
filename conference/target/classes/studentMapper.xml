<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.IStudentDao">

    <select id="queryStudentAndCourseById" resultMap="scMapper">
        select sno,sname,gender,cname,credit,cno
        from student,course,elective_s_c
        where sno = student_id
              and cno = course_id
              and sno = #{sno}
    </select>

    <resultMap id="scMapper" type="Student">
        <id column="sno" property="sno"/>
        <result column="sname" property="sname"/>
        <result column="age" property="age"/>
        <result column="department" property="department"/>
        <result column="gender" property="gender"/>
        <collection property="courses" ofType="Course">
            <id column="cno" property="cno"/>
            <result column="cname" property="cname"/>
            <result column="credit" property="credit"/>
        </collection>
    </resultMap>
    
    <!-- 多对多关系查询-->
    <select id="queryStudentScoreById" resultMap="relationMapper">
        select sno,sname,gender,cname,credit,cno,score,elective_s_c.id
        from student,course,elective_s_c
        where sno = student_id
              and cno = course_id
              and sno = #{sno}
    </select>
    
    <resultMap id="relationMapper" type="Student">
        <id column="sno" property="sno"/>
        <result column="sname" property="sname"/>
        <result column="age" property="age"/>
        <result column="department" property="department"/>
        <result column="gender" property="gender"/>
        <collection property="marks" ofType="Mark">
            <id column="id" property="id"/>
            <result column="score" property="score"/>
            <association property="course" javaType="Course">
                <id column="cno" property="cno"/>
                <result column="cname" property="cname"/>
                <result column="credit" property="credit"/>
            </association>
        </collection>
    </resultMap>

</mapper>