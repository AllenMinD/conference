<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.ICourseDao">


    <!-- 自关联查询，查询指定课程号的直接或间接先修课-->
    <select id="queryAllCpnoInfo" resultMap="cpnoCourseMapper">
        select cno, cname,credit,cpno
        from course
        where cno = #{0}
    </select>

    <resultMap id="cpnoCourseMapper" type="Course">
        <id column="cno" property="cno"/>
        <result column="cname" property="cname"/>
        <result column="credit" property="credit"/>

        <collection property="cpno" ofType="Course"
                    select="queryAllCpnoInfo" column="cpno">
            <id column="cno" property="cno"/>
            <result column="cname" property="cname"/>
            <result column="credit" property="credit"/>
        </collection>
    </resultMap>


    <!-- 自关联查询，查询以指定课程号为先修课的所有课程信息-->
    <select id="queryAllCourseBySpecifiedCno" resultMap="allCourseInfoMapper">
        select cno, cname,credit,cpno
        from course
        where cno = #{0}
    </select>

    <select id="queryCourseInfoByCno" resultMap="allCourseInfoMapper">
        select cno, cname,credit,cpno
        from course
        where cpno = #{xxx}
    </select>
    <resultMap id="allCourseInfoMapper" type="Course">
        <id column="cno" property="cno"/>
        <result column="cname" property="cname"/>
        <result column="credit" property="credit"/>

        <collection property="cpno" ofType="Course"
                    select="queryCourseInfoByCno" column="cno">
            <id column="cno" property="cno"/>
            <result column="cname" property="cname"/>
            <result column="credit" property="credit"/>
        </collection>
    </resultMap>

    <!-- 多对一关联查询 -->
    <select id="queryDirectAdvancesCourse" resultMap="directAdvancedCourseMapper">
        select cno, cname,credit,cpno
        from course
        where cno = #{0}
    </select>

    <resultMap id="directAdvancedCourseMapper" type="Course">
        <id column="cno" property="cno"/>
        <result column="cname" property="cname"/>
        <result column="credit" property="credit"/>

        <association property="directadvancedcourse" javaType="Course"
                     select="queryDirectAdvCourseByCpno" column="cpno">
            <id column="cno" property="cno"/>
            <result column="cname" property="cname"/>
            <result column="credit" property="credit"/>
        </association>
    </resultMap>

    <select id="queryDirectAdvCourseByCpno" resultType="Course">
        select cno, cname,credit,cpno
        from course
        where cno = #{cpno}
    </select>


</mapper>